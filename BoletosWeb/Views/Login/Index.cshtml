@model Conta
@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Login";
}

@if (TempData["MensageErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" data-bs-dismiss="alert" aria-label="Close">X</button>
        @TempData["MensageErro"];
    </div>
}

<form asp-controller="Login" asp-action="Login" method="post">
    <div class="mb-3">
        <label for="login">Login</label>
        <input type="email" asp-for="Email" class="form-control" id="login" aria-describedby="emailHelp" placeholder="Insira o E-mail" required>
    </div>
    <div class="mb-3">
        <label for="senha">Senha</label>
        <input type="password" asp-for="Senha" class="form-control" id="senha" placeholder="Senha" required>
    </div>
    <button type="submit" class="btn btn-primary btn-block">Entrar</button>
</form>